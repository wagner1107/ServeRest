          {
            "in": "path",
            "name": "_id",
            "required": true,
            "description": "ID do usuário",
            "type": "string",
            "default": "0uxuPY0cbmQhpEz1"
          },
          {
            "in": "body",
            "name": "user",
            "schema": {
              "$ref": "#/definitions/requestBodyUsuarios"
