{
  "swagger": "2.0",
  "info": {
    "description": "O ServeRest é um servidor REST que simula uma loja virtual com intuito de servir de material de estudos de testes de API",
    "version": "1.0.0",
    "title": "ServeRest"
  },
  "tags": [
    {
      "name": "Usuários",
      "description": "Gerencie os usuários, consulte dados para login e cadastre administrador"
    }
  ],
  "schemes": [
    "http",
    "https"
  ],
  "paths": {
    "/usuarios": {
      "get": {
        "tags": [
          "Usuários"
        ],
        "summary": "Listar usuários cadastrados",
        "operationId": "getEvents",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "$ref": "#/parameters/_id"
          },
          {
            "$ref": "#/parameters/nome"
          },
          {
            "$ref": "#/parameters/email"
          },
          {
            "$ref": "#/parameters/password"
          },
          {
            "$ref": "#/parameters/administrador"
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de usuários",
            "schema": {
              "$ref": "#/definitions/getUsuarios"
            }
          }
        }
      },
      "post": {
        "tags": [
          "Usuários"
        ],
        "summary": "Cadastrar usuário",
        "description": "Não é permitido cadastrar usuário com email já utilizado",
        "parameters": [
          {
            "in": "body",
            "name": "user",
            "schema": {
              "$ref": "#/definitions/requestBodyUsuarios"
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "201": {
            "description": "Cadastro com sucesso",
            "schema": {
              "$ref": "#/definitions/cadastroComSucesso"
            }
          },
          "400": {
            "description": "E-mail já cadastrado",
            "schema": {
              "$ref": "#/definitions/errorEmailJaUtilizado"
            }
          }
        }
      },
      "put": {
        "tags": [
          "Usuários"
        ],
        "summary": "Editar usuário",
        "description": "Não é permitido cadastrar usuário com email já utilizado. Caso não seja encontrado usuário com o ID informado é realizado novo cadastro ao invés de alteração.",
        "parameters": [
          {
            "in": "path",
            "name": "_id",
            "required": true,
            "description": "ID do usuário a ser alterado",
            "type": "string",
            "default": "0uxuPY0cbmQhpEz1"
          },
          {
            "in": "body",
            "name": "user",
            "schema": {
              "$ref": "#/definitions/requestBodyUsuarios"
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Alterado com sucesso",
            "schema": {
              "$ref": "#/definitions/alteradoComSucesso"
            }
          },
          "201": {
            "description": "Cadastro com sucesso",
            "schema": {
              "$ref": "#/definitions/cadastroComSucesso"
            }
          },
          "400": {
            "description": "E-mail já cadastrado",
            "schema": {
              "$ref": "#/definitions/errorEmailJaUtilizado"
            }
          }
        }
      }
    }
  },
  "parameters": {
    "_id": {
      "in": "query",
      "name": "_id",
      "required": false,
      "type": "string"
    },
    "nome": {
      "in": "query",
      "name": "nome",
      "required": false,
      "type": "string"
    },
    "email": {
      "in": "query",
      "name": "email",
      "required": false,
      "type": "string"
    },
    "password": {
      "in": "query",
      "name": "password",
      "required": false,
      "type": "string"
    },
    "administrador": {
      "in": "query",
      "name": "administrador",
      "required": false,
      "type": "string",
      "enum": [
        "true",
        "false"
      ]
    }
  },
  "definitions": {
    "nome": {
      "type": "string",
      "example": "Fulano da Silva"
    },
    "email": {
      "type": "string",
      "example": "beltrano@qa.com.br"
    },
    "password": {
      "type": "string",
      "example": "teste"
    },
    "administrador": {
      "type": "string",
      "enum": [
        "true",
        "false"
      ],
      "example": "true"
    },
    "_id": {
      "type": "string",
      "example": "0uxuPY0cbmQhpEz1"
    },
    "requestBodyUsuarios": {
      "type": "object",
      "properties": {
        "nome": {
          "$ref": "#/definitions/nome"
        },
        "email": {
          "$ref": "#/definitions/email"
        },
        "password": {
          "$ref": "#/definitions/password"
        },
        "administrador": {
          "$ref": "#/definitions/administrador"
        }
      }
    },
    "getUsuarios": {
      "type": "object",
      "properties": {
        "quantidade": {
          "type": "number",
          "example": 1
        },
        "usuarios": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "nome": {
                "$ref": "#/definitions/nome"
              },
              "email": {
                "$ref": "#/definitions/email"
              },
              "password": {
                "$ref": "#/definitions/password"
              },
              "administrador": {
                "$ref": "#/definitions/administrador"
              },
              "_id": {
                "$ref": "#/definitions/_id"
              }
            }
          }
        }
      }
    },
    "cadastroComSucesso": {
      "type": "object",
      "properties": {
        "message": {
          "type": "string",
          "example": "Cadastro realizado com sucesso"
        },
        "_id": {
          "type": "string",
          "example": "jogfODIlXsqxNFS2"
        }
      }
    },
    "alteradoComSucesso": {
      "type": "object",
      "properties": {
        "message": {
          "type": "string",
          "example": "Registro alterado com sucesso"
        }
      }
    },
    "errorEmailJaUtilizado": {
      "type": "object",
      "properties": {
        "message": {
          "type": "string",
          "example": "Este email já está sendo usado"
        }
      }
    }
  },
  "externalDocs": {
    "description": "Repositório do ServeRest",
    "url": "https://github.com/PauloGoncalvesBH/ServeRest"
  }
}